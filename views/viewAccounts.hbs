<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

    <a href="/auth/logout" class="btn btn-warning mt-3">Logout</a>

    <h1 class="text-center">Admin Dashboard</h1>
    {{#if title}}
    <h3 class="alert alert-secondary mt-4">
        {{title}}
        </h3>
        {{/if}}


    {{#if data}}
    <table class="table table-bordered table-dark">
        <thead class="text-center">
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each data}}
                <tr>
                    <td>{{this.student_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.course_name}}</td>
                    
                    <td>
                        <a class="btn btn-info btn-sm" href="/auth/updateForm/{{this.student_id}}">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/auth/deleteUser/{{this.student_id}}" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>
                </tr>

                
            {{/each}}
            <tr style="border-bottom: none;">
                <td><a href="/auth/addStudentForm" class="btn btn-success btn-sm">Add</a></td>
            </tr>
            
        </tbody>
    </table>

    
{{/if}}



    













        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
        
</body>
</html>